<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".activities.ActivityUnidade">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#92929C"
        android:textColor="#010B01"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="5dp"
        android:text="Cadastro de Unidades"
        android:textSize="30sp"
        android:textStyle="bold"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:hint="Id"
        android:textColor="#090000"
        android:enabled="false"
        />


    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:hint="Nome"
        android:textColor="#090000"
        />

    <EditText
        android:id="@+id/edit_endereco"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:hint="EndereÃ§o"
        android:textColor="#090000"
        />

    <EditText
        android:id="@+id/edit_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:hint="Status"
        android:textColor="#090000"
        android:enabled="false"

        />

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Salvar"
        android:textSize="20sp"
        android:background="#92929C"
        android:textAllCaps="false"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/escola" />

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/list_view_unidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>